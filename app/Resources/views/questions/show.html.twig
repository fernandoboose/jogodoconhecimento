<form id = "form-answer" method = "post" action = "/validaresposta">
	<div class="list-group questions-wrap">
	  <a href="#" class="list-group-item active">
	    {{question.desc}}
	  </a>
	  {% for option in options %}
	  	<a href="#" class="list-group-item option" option = "{{option.id}}">{{option.desc}}</a>
	  {% endfor %}
	  <input type = "hidden" name = "answer" value = "" id = "answer" />
	</div>
	{% block javascripts %}
		<script type="text/javascript" src = "{{ asset('/js/showQuestions.js') }}"></script>
	{% endblock %}
</form>